---
import Head from "../components/structure/Head.astro";
import Header from "../components/header/Header.astro";
import Footer from "../components/footer/Footer.astro";
import FloatingSocials from "../components/floating-socials/FloatingSocials.astro";

export interface Props {
  title: string;
  description: string;
  activePage?: "home" | "projects" | "blog";
  noindex?: boolean;
}

const { title, description, activePage, noindex } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <Head title={title} description={description} noindex={noindex} />

  <body class="text-slate-700 selection:bg-red-200 bg-slate-50">
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-5HQ4WCT"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->

    <Header active={activePage} />

    <aside class="container mx-auto max-w-7xl relative">
      <FloatingSocials />
    </aside>

    <slot></slot>

    <Footer />
  </body>
</html>
