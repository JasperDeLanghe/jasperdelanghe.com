---
export interface Props {
  post: any;
}
const { post } = Astro.props;
---

<article class="rounded-lg shadow-lg bg-white max-w-lg">
  <a href={post.url}>
    <img
      class="rounded-t-lg"
      src={post.frontmatter.img}
      alt={post.frontmatter.imgAlt}
    />
  </a>
  <div class="p-6">
    <p class="mb-2 text-sm text-slate-400">{post.frontmatter.publishDate}</p>
    <h5 class="text-slate-900 text-xl font-medium mb-2">
      {post.frontmatter.title}
    </h5>
    <p class="text-slate-700 text-base mb-4">
      {post.frontmatter.description}
    </p>
    <a
      href={post.url}
      class="inline-block px-6 py-2.5 bg-red-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-red-700 hover:shadow-lg focus:bg-red-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-red-800 active:shadow-lg transition duration-150 ease-in-out"
    >
      Read more
    </a>
  </div>
</article>
