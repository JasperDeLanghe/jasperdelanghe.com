---
export interface Props {
  active?: "home" | "projects" | "blog";
}

const { active } = Astro.props as Props;

const linkClasses = `hover:text-red-600 text-base`;
const activeClasses = `text-red-400`;

const buttonClass = `inline-block px-6 py-2.5 bg-red-400 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-red-600 hover:shadow-lg focus:ring-0 transition duration-150 ease-in-out`;
---

<ul
  class="text-slate-700 md:flex md:justify-between md:items-center text-center md:text-left"
>
  <li class="py-2 md:py-0">
    <a
      class={`${linkClasses} ${active === "home" && activeClasses} mr-4`}
      href="/"
      >Home
    </a>
  </li>
  <li class="py-2 md:py-0">
    <a
      class={`${linkClasses} ${active === "projects" && activeClasses} mr-4`}
      href="/projects"
      >Projects
    </a>
  </li>
  <li class="py-2 md:py-0">
    <a
      class={`${linkClasses} ${active === "blog" && activeClasses} mr-4`}
      href="/blog"
      >Blog
    </a>
  </li>
  <li class="py-2 md:py-0">
    <a class={`${buttonClass}`} href="/contact">Contact</a>
  </li>
</ul>
