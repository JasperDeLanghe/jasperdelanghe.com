---
import Layout from "../layouts/Layout.astro";

const title = "Contact me | JasperDeLanghe";
const description =
  "If you wish to follow me on other social networks other than my own site, this is where you'll find those links. Business inquiries possible via email or twitter DM.";

const linkClasses =
  "underline decoration-red-400 decoration-2 hover:bg-red-400 hover:text-white sm:text-lg md:text-xl";
---

<Layout title={title} description={description}>
  <main class="container mx-auto max-w-5xl px-4 xl:pl-4 mt-12 lg:mt-20">
    <!-- Hero section -->
    <div class="text-center xl:text-left">
      <h1
        class="text-4xl tracking-tight font-extrabold text-slate-900 sm:text-5xl md:text-6xl"
      >
        <span class="inline">Contact</span>
        <span class="text-red-600 inline">me</span>
      </h1>
      <p
        class="mt-3 text-base text-slate-700 sm:mt-8 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-8 md:text-xl xl:mx-0"
      >
        You can follow me on several social media platforms such as
      </p>
      <ul class="mt-2">
        <li class="inline-block mr-3">
          <a
            href="https://twitter.com/Soepser"
            rel="nofollow"
            target="_blank"
            class={linkClasses}
            >Twitter
          </a>
        </li>
        <li class="inline-block mr-3">
          <a
            href="https://github.com/JasperDeLanghe"
            rel="nofollow"
            target="_blank"
            class={linkClasses}
            >GitHub
          </a>
        </li>
        <li class="inline-block mr-3">
          <a
            href="https://www.youtube.com/channel/UCwnudQSSsYMMbseZFwxV06Q"
            rel="nofollow"
            target="_blank"
            class={linkClasses}
            >YouTube
          </a>
        </li>
      </ul>
    </div>

    <div class="mt-12 text-center xl:text-left">
      <h2
        class="text-2xl tracking-tight font-extrabold text-slate-900 sm:text-3xl md:text-4xl mt-12"
      >
        Business inquiries?
      </h2>
      <p
        class="
        mt-3
        text-base
        text-slate-700
        sm:mt-8
        sm:text-lg
        sm:max-w-xl
        sm:mx-auto
        md:mt-8
        md:text-xl
        xl:mx-0"
      >
        Contact me through: <a
          href="https://twitter.com/Soepser"
          rel="nofollow"
          target="_blank"
          class={`${linkClasses} block md:inline-block`}
          >Twitter DM
        </a>
      </p>
    </div>
  </main>
</Layout>
